<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:scrollbars="vertical">

    <!-- Title -->
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/f1"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp"/>

    <!-- Description -->
    <TextView
        android:id="@+id/description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/f2"
        android:layout_marginBottom="16dp"/>

    <!-- Eligibility -->
    <TextView
        android:id="@+id/eligibility"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/f3"
        android:textStyle="bold"
        android:layout_marginBottom="4dp"/>

    <TextView
        android:id="@+id/eligibility_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/f4"
        android:layout_marginBottom="16dp"/>

    <!-- Scheme Criteria -->
    <TextView
        android:id="@+id/scheme_criteria"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/f5"
        android:textStyle="bold"
        android:layout_marginBottom="4dp"/>

    <TextView
        android:id="@+id/scheme_criteria_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/f6"
        android:layout_marginBottom="16dp"/>

    <!-- Application Duration -->
    <TextView
        android:id="@+id/application_duration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/f7"
        android:textStyle="bold"
        android:layout_marginBottom="4dp"/>

    <TextView
        android:id="@+id/application_duration_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/f8"
        android:layout_marginBottom="16dp"/>

    <!-- How to Apply -->
    <TextView
        android:id="@+id/how_to_apply"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/f9"
        android:textStyle="bold"
        android:layout_marginBottom="4dp"/>

    <TextView
        android:id="@+id/how_to_apply_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/f10"
        android:layout_marginBottom="16dp"/>
</LinearLayout>
