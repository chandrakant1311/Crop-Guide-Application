<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".Schemes_of_MH.PMKISAN_S_MH">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/pmkisan_title"
                android:textStyle="bold"
                android:textSize="20sp"
                android:gravity="center"
                android:paddingBottom="16dp"/>

            <TextView
                android:id="@+id/description_heading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/description"
                android:textStyle="bold"
                android:textSize="16sp"
                android:paddingBottom="4dp"/>

            <TextView
                android:id="@+id/description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/pmkisan_description"
                android:textSize="14sp"
                android:paddingBottom="16dp"/>

            <TextView
                android:id="@+id/eligibility_heading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/eligibility"
                android:textStyle="bold"
                android:textSize="16sp"
                android:paddingBottom="4dp"/>

            <TextView
                android:id="@+id/eligibility"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/pmkisan_eligibility"
                android:textSize="14sp"
                android:paddingBottom="16dp"/>

            <TextView
                android:id="@+id/scheme_criteria_heading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/scheme_criteria"
                android:textStyle="bold"
                android:textSize="16sp"
                android:paddingBottom="4dp"/>

            <TextView
                android:id="@+id/scheme_criteria"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/pmkisan_scheme_criteria"
                android:textSize="14sp"
                android:paddingBottom="16dp"/>

            <TextView
                android:id="@+id/application_duration_heading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/application_duration"
                android:textStyle="bold"
                android:textSize="16sp"
                android:paddingBottom="4dp"/>

            <TextView
                android:id="@+id/application_duration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/pmkisan_application_duration"
                android:textSize="14sp"
                android:paddingBottom="16dp"/>

            <TextView
                android:id="@+id/how_to_apply_heading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/how_to_apply"
                android:textStyle="bold"
                android:textSize="16sp"
                android:paddingBottom="4dp"/>

            <TextView
                android:id="@+id/how_to_apply"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/pmkisan_how_to_apply"
                android:textSize="14sp"
                android:autoLink="web"/>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
